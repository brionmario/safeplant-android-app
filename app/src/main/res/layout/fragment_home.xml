<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.apareciumlabs.brionsilva.safeplant.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--heart rate label-->

    <!--heart rate circle-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bpm_display"
        android:layout_marginTop="52dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--heart rate bpm-->
    <TextView
        android:text="@string/bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_bpm"
        android:layout_below="@+id/tv_heartRate"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <!--heart rate value-->

    <!--heart rate graph-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/heart_graph"
        android:id="@+id/bpm_graph"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/lbl_bpm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--temp pressure background-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/temp_bpressure_footer"
        android:id="@+id/imageView7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--lbl temperature-->

    <!--lbl pressure-->

    <!--tv temp value-->

    <!--lbl celsius-->

    <!--tv pressure status-->

    <TextView
        android:text="@string/lbl_celsius"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/lbl_celsius"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp" />

    <TextView
        android:text="@string/tv_pressure_status"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:id="@+id/tv_pressure_status"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tv_temp_value"
        android:layout_alignBottom="@+id/tv_temp_value"
        android:layout_toRightOf="@+id/tv_temp_value"
        android:layout_toEndOf="@+id/tv_temp_value" />

    <TextView
        android:text="@string/tv_heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/tv_heartRate"
        android:textColor="@color/darkGrey"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_below="@+id/lbl_heartrate"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/tv_temp_value"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:id="@+id/tv_temp_value"
        android:textSize="18sp"
        android:layout_marginBottom="7dp"
        android:layout_above="@+id/lbl_celsius"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/lbl_pressure"
        android:layout_width="208dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Red"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_pressure"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/lbl_temp"
        android:layout_alignBottom="@+id/lbl_temp"
        android:layout_toRightOf="@+id/tv_temp_value"
        android:layout_toEndOf="@+id/tv_temp_value" />

    <TextView
        android:text="@string/lbl_temp"
        android:layout_width="208dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/Red"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_temp"
        android:textSize="12sp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/tv_temp_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/lbl_heartrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_heartrate"
        android:fontFamily="sans-serif"
        android:textColor="@color/Red"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
